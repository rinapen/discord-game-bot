# ========================================
# 環境設定
# ========================================
# test: テストモード（PayPay不要、モックデータ使用）
# production: 本番モード（実際のPayPay接続）
ENVIRONMENT=test

# ========================================
# Discord設定
# ========================================
DISCORD_BOT_TOKEN=your_bot_token_here

# サーバー・チャンネルID
GUILD_ID=your_guild_id
ACCOUNT_CHANNEL_ID=your_account_channel_id
INVITE_PANEL_CHANNEL_ID=your_invite_panel_channel_id
HITANDBLOW_CATEGORY_ID=your_hitandblow_category_id
INFO_PANEL_CHANNEL_ID=your_info_panel_channel_id

# ロールID
PURCHASER_ROLE_ID=your_purchaser_role_id

# ========================================
# MongoDB設定
# ========================================
MONGO_URI=mongodb://localhost:27017/
DB_NAME=casino_bot

# ========================================
# コレクション名（デフォルト値使用可）
# ========================================
# TOKENS_COLLECTION=tokens
# USERS_COLLECTION=users
# SETTINGS_COLLECTION=settings
# CASINO_STATS_COLLECTION=casino_stats
# MODELS_COLLECTION=models
# BLACKJACK_LOGS_COLLECTION=blackjack_logs
# FINANCIAL_TRANSACTIONS_COLLECTION=financial_transactions
# CASINO_TRANSACTION_COLLECTION=casino_transactions
# BET_HISTORY_COLLECTION=bet_history
# BOT_STATE_COLLECTION=bot_state
# BLACKLIST_COLLECTION=blacklist

# ========================================
# ログチャンネルID
# ========================================
CASINO_LOG_CHANNEL_ID=your_channel_id
PAYIN_LOG_CHANNEL_ID=your_channel_id
PAYOUT_LOG_CHANNEL_ID=your_channel_id
EXCHANGE_LOG_CHANNEL_ID=your_channel_id
RANKING_CHANNEL_ID=your_channel_id
ADMIN_CHANNEL_ID=your_channel_id

# ========================================
# 管理者・除外ユーザーID
# ========================================
# 管理者ユーザーID（エラー通知の送信先）
ADMIN_USER_ID=your_admin_user_id

# 統計から除外するユーザーID（カンマ区切り）
# 例: EXCLUDED_USER_IDS=123456789,987654321
EXCLUDED_USER_IDS=

# ========================================
# 景品交換機能
# ========================================
# true: 景品交換機能を有効化
# false: 景品交換機能を無効化（デフォルト）
# ※ 直接換金ではなく、景品交換方式です
EXCHANGE_ENABLED=false

# ========================================
# PayPay設定（本番モード時のみ必要）
# ========================================
# ⚠️ 警告: 本番環境でのみ設定してください
# ⚠️ テストモードでは不要です
# PAYPAY_PHONE_NUMBER=your_phone_number
# PAYPAY_PIN=your_pin

